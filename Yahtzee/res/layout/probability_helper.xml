<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.jorflekel.yahtzee.views.HandPicker
        android:id="@+id/handPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >
    </com.jorflekel.yahtzee.views.HandPicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_label_background"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/threeOfAKindLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:onClick="onLabelClick"
                    android:text="3 of a kind"
                    android:textSize="@dimen/text_size" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/threeOfAKindProb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onScoreClick"
                    android:textColor="@color/default_score_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_label_background"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/fourOfAKindLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:onClick="onLabelClick"
                    android:text="4 of a kind"
                    android:textSize="@dimen/text_size" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/fourOfAKindProb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onScoreClick"
                    android:textColor="@color/default_score_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_label_background"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/yahtzeeLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:onClick="onLabelClick"
                    android:text="Yahtzee"
                    android:textSize="@dimen/text_size" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/yahtzeeProb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onScoreClick"
                    android:textColor="@color/default_score_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_label_background"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/smallStraightLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:onClick="onLabelClick"
                    android:text="Small Straight"
                    android:textSize="@dimen/text_size" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/smallStraightProb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onScoreClick"
                    android:textColor="@color/default_score_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_label_background"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/largeStraightLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:onClick="onLabelClick"
                    android:text="Large Straight"
                    android:textSize="@dimen/text_size" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/largeStraightProb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onScoreClick"
                    android:textColor="@color/default_score_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/text_label_background"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/fullHouseLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:onClick="onLabelClick"
                    android:text="Full House"
                    android:textSize="@dimen/text_size" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/fullHouseProb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:onClick="onScoreClick"
                    android:textColor="@color/default_score_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>